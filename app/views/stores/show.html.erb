<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Store #<%= @store.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @store.name %></dd>

              <dt>Address</dt>
              <dd><%= @store.address %></dd>

              <dt>City</dt>
              <dd><%= @store.city %></dd>

              <dt>State</dt>
              <dd><%= @store.state %></dd>

              <dt>Zip</dt>
              <dd><%= @store.zip %></dd>

              <dt>Website url</dt>
              <dd><%= @store.website_url %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to stores_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_store_url(@store.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to store_url(@store.id), :method => "delete", :data => { :confirm => "Do you really want to delete this store?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

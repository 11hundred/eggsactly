<!-- Validation failure messages -->

<% if @product_at_store_from_source.errors.any? %>
  <% @product_at_store_from_source.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Product At Store From Source</h3>
      </div>
      <div class="panel-body">
        <%= form_tag product_at_store_from_sources_url, :method => "post", :class => "form-horizontal" do %>
          <!-- Label and input for product_id -->
          <div class="form-group">
            <label for="product_id" class="col-sm-2 control-label">
              Product
            </label>
            <div class="col-sm-10">
              <input type="text" id="product_id" name="product_id" placeholder="Product" class="form-control" value="<%= @product_at_store_from_source.product_id %>">
            </div>
          </div>

          <!-- Label and input for store_id -->
          <div class="form-group">
            <label for="store_id" class="col-sm-2 control-label">
              Store
            </label>
            <div class="col-sm-10">
              <input type="text" id="store_id" name="store_id" placeholder="Store" class="form-control" value="<%= @product_at_store_from_source.store_id %>">
            </div>
          </div>

          <!-- Label and input for source_id -->
          <div class="form-group">
            <label for="source_id" class="col-sm-2 control-label">
              Source
            </label>
            <div class="col-sm-10">
              <input type="text" id="source_id" name="source_id" placeholder="Source" class="form-control" value="<%= @product_at_store_from_source.source_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Product At Store From Source" class="btn btn-success">
              or
              <a href="/product_at_store_from_sources">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

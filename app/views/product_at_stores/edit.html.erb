<!-- Validation failure messages -->

<% if @product_at_store.errors.any? %>
  <% @product_at_store.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Product At Store #<%= @product_at_store.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag product_at_store_url(@product_at_store.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for product_id -->
          <div class="form-group">
            <label for="product_id" class="col-sm-2 control-label">
              Product
            </label>
            <div class="col-sm-10">
              <input type="text" id="product_id" name="product_id" placeholder="Product" class="form-control" value="<%= @product_at_store.product_id %>">
            </div>
          </div>

          <!-- Label and input for store_id -->
          <div class="form-group">
            <label for="store_id" class="col-sm-2 control-label">
              Store
            </label>
            <div class="col-sm-10">
              <input type="text" id="store_id" name="store_id" placeholder="Store" class="form-control" value="<%= @product_at_store.store_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Product At Store" class="btn btn-warning">
              or
              <%= link_to "Cancel", product_at_store_url(@product_at_store.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
